{% extends 'base.html.twig' %}

{% block title %}Saison{% endblock %}

{% block body %}
    <h1>Saison</h1>
    <div class=" div-media-season-show">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
            <div class="media-body div-season-show">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Nombre d'épisode </th>
                        <td>{{ season.id }}</td>
                    </tr>
                    <tr>
                        <th>Saison</th>
                        <td>{{ season.number }}</td>
                    </tr>
                    <tr>
                        <th>Année de sortie</th>
                        <td>{{ season.year }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ season.description }}</td>
                    </tr>
                    </tbody>
                </table>
                <div>
                    <div style="margin-bottom: 5px" >
                        <a href="{{ path('season_edit', {'id': season.id}) }}">Modifier le contenu de l'épisode</a>
                    </div>
                    <div style="margin-bottom: 5px" >
                        <a href="{{ path('program_index') }}"> Retour à la liste des programmes</a>
                    </div>
                    <div style="margin-bottom: 5px" >
                        <a href="{{ path('season_index') }}">Retour à la liste des saisons</a>
                    </div>

                    <div>
                        {{ include('season/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
    </div>

{% endblock %}
